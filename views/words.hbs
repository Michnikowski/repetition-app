<!DOCTYPE html>
<html lang="en">

  {{> head}}

  <body>

    <div class="container">
      {{> navbar}}
      <h3 class="text-center py-3">{{wordRoot}}</h3>
      <table class="table table-bordered table-responsive">
        <thead>
          <tr>
            <th style="width: 17%" scope="col">Word</th>
            <th style="width: 55%" scope="col">Definition</th>
            <th style="width: 15%" scope="col">Phonetics</th>
            <th style="width: 3%" scope="col">Membean</th>
            {{#if root}}
            <th style="width: 13%" scope="col">Root</th>
            {{/if}}
          </tr>
        </thead>
        <tbody>
        {{#each words}}
          <tr>
            <td>
              <h5>{{#if this.audioUrl}}
                <a href={{this.audioUrl}} target="_blank">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-right-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                    <path d="M5.795 12.456A.5.5 0 0 1 5.5 12V4a.5.5 0 0 1 .832-.374l4.5 4a.5.5 0 0 1 0 .748l-4.5 4a.5.5 0 0 1-.537.082z"/>
                  </svg>
                </a>
              {{/if}}
              {{this.name}}</h5>
            </td>
            <td>
              {{this.definition}}
            </td>
            <td>
              {{this.phoneticNotation}}
            </td>
            <td class="text-center">
              {{#if this.membean}}
              Yes
              {{else}}
              No
              {{/if}}
            </td>
            {{#if this.wordRoots}}
            <td>
              <ul class="list-group">
              {{#each this.wordRoots}}
                <li class="list-group-item"><a href="/roots/{{this.name}}">{{this.name}}</a></li>
              {{/each}}
              </ul>
            </td>
            {{/if}}
          </tr>
        {{/each}}
        </tbody>
      </table>

      {{#if root}}
      {{> pagination}}
      {{/if}}

    </div>
  </body>
</html>
