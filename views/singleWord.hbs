<!DOCTYPE html>
<html lang="en">

  {{> head}}

  <body>
    <div class="container">
      {{> navbar}}
      <br>
      <div class="row">
        <div class="col d-flex justify-content-end">
          <form action="/mywords/word/delete/{{this.id}}" method="get" name="del">
            <button class="btn btn-outline-danger btn text-left" type="submit" name="id" value={{this.id}}>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
              </svg>
              Remove
            </button>
          </form>
        </div>
      </div>
      <br>
      <div class="row justify-content-center text-center">
        <div class="col">
          <h2>{{this.name}}</h2>
        </div>
      </div>
      <br>
      {{#if this.definition}}
      <div class="row justify-content-center">
        <div class="col text-center">
          <h4><i>{{this.definition}}</i></h4>
        </div>
      </div>
      <br>
      <br>
      {{/if}}
      <div class="row justify-content-center text-center">
        <div class="col">
          <h5>Phonetic notation</h5>
        </div>
        <div class="col">
          <h5>Audio</h5>
        </div>
        <div class="col">
          <h5>Video</h5>
        </div>
        <div class="col">
          <h5>Membean</h5>
        </div>
      </div>
      <div class="row justify-content-center text-center">
        <div class="col">
          <h3>{{this.phoneticNotation}}</h3>
        </div>
        <div class="col">
          {{#if this.audioUrl}}
            {{> audioUrl}}
          {{/if}}
        </div>
        <div class="col">
          {{> videoUrl}}
        </div>
        <div class="col"><h3>
          {{#if word.membean}}
            Yes
          {{else}}
            No
          {{/if}}
          </h3>
        </div>
      </div>
      <br>
      {{#each this.wordFunctions}}
      <div class="row justify-content-center text-center">
        <div class="col">
          <h3>{{this.function}}</h3>
          <br>
          {{#if this.definitions}}
            <div class="row justify-content-center text-center">
              <div class="col">
                <h5>Definitions</h5>
              </div>
            </div>
            {{#each this.definitions}}
              <div class="row justify-content-center text-center">
                <div class="col">
                  <h4><i>{{this.definement}}</i></h4>
                </div>
              </div>
            {{/each}}
            <br>
          {{/if}}

          {{#if this.examples}}
            <div class="row justify-content-center text-center">
              <div class="col">
                <h5>Examples</h5>
              </div>
            </div>

            {{#each this.examples}}
              <div class="row justify-content-center text-center">
                <div class="col">
                  <h4><i>{{this.usage}}</i></h4>
                </div>
              </div>
            {{/each}}
          {{/if}}
        </div>
      </div>
      <br>
      <br>
      {{/each}}
    </div>
  </body>
</html>
