<!DOCTYPE html>
<html lang="en">

  {{> head}}

  <body>

    <div class="container">
      {{> navbar}}

      <div class="letters">

        <div class="row py-4">
        {{#each letters}}

          <div class="col-1 text-center py-3">
            <div class="list-group">
              <a href="/words/{{letter}}" class="list-group-item list-group-item-action">
                {{letter}}
              </a>
            </div>
          </div>

        {{/each}}
        </div>
      </div>
    </div>
  </body>
</html>
