{{> head}}

<div class="container">
  <br><p class="text-center">Repetiton app</p>
  <hr>
  <div class="row justify-content-center">
  <div class="col-md-6">
  <div class="card">
  <header class="card-header">
    <h4 class="card-title mt-2">Login</h4>
  </header>
  <article class="card-body">
  <form action="/auth/login" method="POST" id="login">
    <div class="form-group">
      <label>Email address</label>
      <input type="email" class="form-control" placeholder="" name="email">
        {{#if userError}}
        <small class="text-muted" role="alert">Wrong email...</small>
        {{/if}}
    </div>
    <div class="form-group">
      <label>Password</label>
        <input class="form-control" type="password" name="pwd">
        {{#if userError}}
        <small class="text-muted" role="alert">Wrong password...</small>
        {{/if}}
    </div>
      <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Login</button>
      </div>
  </form>
  </article>
  <div class="border-top card-body text-center">Don't have an account? <a href="/users/register">Sign up</a></div>
  </div>
  </div>
  </div>
</div>
