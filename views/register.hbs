{{>head}}

<div class="container">
  <br><p class="text-center">Create new account</p>
  <hr>
  <div class="row justify-content-center">
  <div class="col-md-6">
  <div class="card">
  <header class="card-header">
    <h4 class="card-title mt-2">Sign up</h4>
  </header>
  <article class="card-body">
  <form action="" method="POST">
    <div class="form-row">
      <div class="col form-group">
        <label>First name </label>
          <input type="text" class="form-control" placeholder="" name="firstName">
      </div>
      <div class="col form-group">
        <label>Last name</label>
          <input type="text" class="form-control" placeholder="" name="lastName">
      </div>
    </div>
    <div class="form-group">
      <label>Email address</label>
      <input type="email" class="form-control" placeholder="" name="email">
      {{#if registerError}}
      <small class="text-muted" role="alert">Email already exists...</small>
      {{/if}}
    </div>
    <div class="form-group">
      <label>Create password</label>
        <input class="form-control" type="password" name="pwd">
    </div>
      <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Register</button>
      </div>
  </form>
  </article>
  <div class="border-top card-body text-center">Have an account? <a href="/users/login">Log In</a></div>
  </div>
  </div>
  </div>
</div>
